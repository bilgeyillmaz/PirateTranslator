@model CaseAFS.Models.User

@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
	<style>
		#register-div {
			position: center;
			left: 40%;
			top: 40%;
			border: 1px solid #ccc;
			padding: 20px;
			border-radius: 20px 20px 20px 20px;
			background-color: black;
		}
	</style>
</head>
<body>
	<div><br /></div>
	<div><br /></div>
	<div class="row">
		<div class="col-3"> </div>
		<div class="col-6" id="register-div">
			<form asp-action="Register">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label style="color: green"><b> <i class="bi bi-person-circle"></i> REGISTER</b></label>
					<span class="alert-success" m-b-5>@ViewBag.Message </span>
				</div>
				<div class="form-group">
					<label asp-for="Email" class="control-label" style="color:white"></label>
					<input asp-for="Email" class="form-control" style="color:green" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Password" class="control-label" style="color:white"></label>
					<input asp-for="Password" class="form-control" style="color:green" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="PasswordRepeat" class="control-label" style="color:white"></label>
					<input asp-for="PasswordRepeat" class="form-control" style="color:green" />
					<span asp-validation-for="PasswordRepeat" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FirstName" class="control-label" style="color:white"></label>
					<input asp-for="FirstName" class="form-control" style="color:green" />
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="LastName" class="control-label" style="color:white"></label>
					<input asp-for="LastName" class="form-control" style="color:green" />
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="PhoneNumber" class="control-label" style="color:white"></label>
					<input asp-for="PhoneNumber" class="form-control" style="color:green" />
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				@*					<div class="form-group">
					<label asp-for="RoleId" class="control-label" style="color:white"></label>
					<input asp-for="RoleId" class="form-control" style="color:green" />
					</div>*@
				<div class="form-group">
					<br />
					<input type="submit" value="Sign Up" class="btn btn-success" />
				</div>
			</form>
		</div>
		<div class="col-3"> </div>
	</div>
</body>
</html>


